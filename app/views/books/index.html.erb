
<!--バリデーション-->
<% if @book.errors.any? %>
  <%= @book.errors.count %>件のエラーが発生しました
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>


<!--共通部分-->
<%= render 'info', book: @book %>

<!--投稿一覧-->
<div class="col-md-1">
</div>
<div class="col-md-8">
  
<h2>Books</h2>
<table class="table">
    <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
    </tr>
    </thead>
    
    <tbody>
      <% @books.each do |book| %>
      <tr>
        <td>
          <%= image_tag book.user.get_profile_image(100,100) %>
        </td>
        <td>
           <%= link_to book.title,book %>
        </td>
        <td>
           <%= book.body %>
        </td>
       <% end %>
     </tbody>
  </table>
  </div> 
