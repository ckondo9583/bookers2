<h1>Books#index</h1>
<p>Find me in app/views/books/index.html.erb</p>

<!--バリデーション-->
<% if @book.errors.any? %>
  <%= @book.errors.count %>件のエラーが発生しました
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<!--Bootstrap-->
<div class="container"> 
  <div class="row"> 

<!--共通部分-->
<%= render 'info', book: @book %>

<!--投稿一覧-->
<div class="col-md-1" style="background-color: pink;">
</div>
<div class="col-md-8" style="background-color: orange;">
  
<h1>Books</h1>
<% @books.each do |book| %>
<div>
  <%= image_tag book.user.get_profile_image(100,100) %>
  <%= link_to book.title,book %>
  <%= book.body %>
</div>
<% end %>

</div>

  </div> 
</div> 