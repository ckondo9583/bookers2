
<!--フラッシュ-->
<div>
  <%= flash[:notice] %>
</div>
<!--バリデーション-->
<% if @book.errors.any? %>
  <%= @book.errors.count %>件のエラーが発生しました
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>


  
<!--共通部分-->
<%= render 'info', book: @new_book %>


<!-- 投稿したBOOKS -->
<div class="col-md-1">
</div>
<div class="col-md-8">  
<h2>Book detail</h2>


<table class="table">
  <tbody>
    <tr>
        <td>
           <%= image_tag @book.user.get_profile_image(100,100) %><br>
           <a href="<%=user_path(@book.user.id) %>"><%= @book.user.name %></a>
        </td>
        <td>
           <a href="<%= book_path(@book) %>"%><%= @book.title %></a>
        </td>
        <td>
           <%= @book.body %>
        </td>
        
    <% if @book.user == current_user %>
        <td>
        <%= link_to "Edit", edit_book_path(@book.id) ,class:'editbtn'%>
        </td>
        <td>
        <%= link_to "Destroy", book_path(@book.id), method: :delete, "data-confirm" => "本当に削除しますか？",class:'destroybtn' %>
        </td>
    <% end %>
</table>


</div>

  </div> 
</div> 