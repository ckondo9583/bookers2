<h1>Books#show</h1>
<p>Find me in app/views/books/show.html.erb</p>

<!-- ユーザーの詳細 -->
<div>
  <%= image_tag @user.get_profile_image(100,100) %>
  <h3><%= @user.name %></h3>
  <h3><%= @user.introduction %></h3>
  <p><%= link_to "プロフィール編集", edit_user_path(@user)%></p>
</div>
<!-- 投稿機能 -->
<h1>New book</h1>
<%= form_with model: @book do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title, value: nil %>
  <h4>Body</h4>
  <%= f.text_area :body, value: nil %>
  <%= f.submit '投稿' %>
<% end %>
<!-- 投稿したBOOKS -->


<div>
  <p>Title: <%= @book.title %></p>
  <p>Body: <%= @book.body %></p>
  <p>ユーザーネーム：<%= @book.user.name %></p>
</div>

<%= link_to "編集", edit_book_path(@book.id) %>
<%= link_to "削除", book_path(@book.id), method: :delete, "data-confirm" => "本当に削除しますか？" %>