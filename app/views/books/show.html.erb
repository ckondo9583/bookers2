<h1>Books#show</h1>
<p>Find me in app/views/books/show.html.erb</p>
<!--フラッシュ-->
<div>
  <%= flash[:notice] %>
</div>
<!--バリデーション-->
<% if @book.errors.any? %>
  <%= @book.errors.count %>件のエラーが発生しました
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<!-- ユーザーの詳細 -->
<h1>User info</h1>
<div>
  <%= image_tag @user.get_profile_image(100,100) %>
  <h3>name  <%= @user.name %></h3>
  <h3>introduction  <%= @user.introduction %></h3>
  <p><%= link_to "プロフィール編集", edit_user_path(@user)%></p>
</div>
<!-- 投稿機能 -->
<h1>New book</h1>
<%= form_with model: @book do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title, value: nil %>
  <h4>Opinion</h4>
  <%= f.text_area :body, value: nil %>
  <%= f.submit 'Create Book' %>
<% end %>

<!-- 投稿したBOOKS -->


<div>
  <p>Title: <%= @book.title %></p>
  <p>Body: <%= @book.body %></p>
  <p>ユーザーネーム：<%= @book.user.name %></p>
</div>

<% if @book.user == current_user %>
<%= link_to "編集", edit_book_path(@book.id) %>
<%= link_to "削除", book_path(@book.id), method: :delete, "data-confirm" => "本当に削除しますか？" %>
<% end %>