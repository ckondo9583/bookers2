<main>
  <p id="notice"></p>
  <div class="container">
  <div class="row">
    <div class="mx-auto col-11 col-sm-10 col-lg8 col-xl-6">
    
<h1>Editing Book</h1>

<%= form_with model: @book do |f| %>
  <div class="formgroup">
  <label for="book_title">Title</label>
  <%= f.text_field :title,class:'text_field' %>
  </div>
  
  <div class="formgroup">
  <label for="book_opinion">Opinion</label>
  <%= f.text_area :body ,class:'text_area'%>
   </div>
  
  <div class="formgroup">
  <%= f.submit 'Update Book',class:'createbtn' %>
  </div>
<% end %>

<a class="book_path" href="<%= book_path(@book) %>">show</a>
|
<a class="book_path" href="<%= books_path %>">Back</a>

</main>
