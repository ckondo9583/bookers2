<h1>Users#show</h1>
<p>Find me in app/views/users/show.html.erb</p>

<!-- ユーザーの詳細 -->
<div>
  <h3><%= @user.name %></h3>
</div>

<!-- ユーザーの投稿一覧 -->

<% @books.each do |book| %>
<div>
  <p>Title: <%= book.title %></p>
  <p>Body: <%= book.body %></p>
  <p>ユーザーネーム：<%= book.user.name %></p>
</div>
<% end %>