<h1>Users#show</h1>
<p>Find me in app/views/users/show.html.erb</p>

<!-- ユーザーの詳細 -->
<div>
  <h3><%= @user.name %></h3>
</div>

<!-- 投稿機能 -->
<h1>New book</h1>
<%= form_with model: @book do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title, value: nil %>
  <h4>Body</h4>
  <%= f.text_area :body, value: nil %>
  <%= f.submit '投稿' %>
<% end %>

<!-- ユーザーの投稿一覧 -->

<% @books.each do |book| %>
<div>
  <p>Title: <%= book.title %></p>
  <p>Body: <%= book.body %></p>
  <p>ユーザーネーム：<%= book.user.name %></p>
</div>
<% end %>